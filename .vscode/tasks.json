{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
		{
			"type": "npm",
			"script": "build",
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": []
		},
		{
			"type": "npm",
			"script": "lint",
			"problemMatcher": [
				{
					"pattern": [
						{
							"regexp": "^ERROR:\\s([^\\s][^:]*):(\\d+):(\\d+)\\s-\\s(.*)",
							"file": 1,
							"line": 2,
							"column": 3,
							"message": 4
						}
					],
					"fileLocation": [
						"relative",
						"/"
					],
					"owner": "tslint",
					"severity": "warning",
					"source": "tslint"
				}
			]
		},
		{
      "type": "npm",
      "script": "start",
      "isBackground": true,
      "problemMatcher": []
    },
		
		{
			"type": "npm",
			"script": "test",
			"problemMatcher": []
		},
		{
			"type": "npm",
			"script": "test.watch",
			"isBackground": true,
			"problemMatcher": []
		},
		{
			"label": "TypeScript watcher",
			"command": "./node_modules/.bin/rollup",
			"args": [
				"-c",
				"--watch"
			],
			"isBackground": true,
			"problemMatcher": [
        {
          "pattern": [
            {
              "regexp": ".",
              "file": 1,
              "location": 2,
              "message": 3
            }
          ],
          "background": {
            "activeOnStart": true,
            "beginsPattern": "rollup",
            "endsPattern": "waiting for changes",
          }
        }
      ]
		},
	]
}
